{
    "env": {
        "node": true,
        "mocha" : true
    },
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "globals" : {
      "describe" : true,
      "it" : true,
      "window" : true,
      "document" : true
    },
    "rules": {
        "no-unused-expressions": 0,
        "indent": [
            "error",
           2, { "SwitchCase" : 0 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}